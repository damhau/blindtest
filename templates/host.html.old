<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Host - MusicQuiz Blindtest</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: '#667eea',
            secondary: '#764ba2',
          }
        }
      }
    }
  </script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap');

    body {
      font-family: 'Poppins', sans-serif;
    }

    .card-hover {
      transition: all 0.3s ease;
    }

    .card-hover:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    }
  </style>
  <link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}">
</head>

<body class="min-h-screen" style="background-color: #fefdfe;">
  <!-- Top Navigation -->
  <nav class="bg-white border-b border-gray-200 px-6 py-4">
    <div class="max-w-7xl mx-auto flex items-center justify-between">
      <!-- Left: Logo -->
      <div class="flex items-center gap-3">
        <img src="/static/assets/logo.png" alt="BlindTest Logo" class="h-10">
        <div class="flex items-baseline gap-2">
          <span class="text-xl font-bold text-gray-800">MusicQuiz</span>
          <span class="text-sm text-gray-500 font-medium">Blindtest</span>
        </div>
      </div>

      <!-- Right: Actions -->
      <div class="flex items-center gap-4">
        <button class="flex items-center gap-2 px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition">
          <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
            <path fill-rule="evenodd"
              d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm9.707 5.707a1 1 0 00-1.414-1.414L9 12.586l-1.293-1.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
              clip-rule="evenodd" />
          </svg>
          <span class="font-semibold text-sm">Leaderboard</span>
        </button>
        <button class="flex items-center gap-2 px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition">
          <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
            <path
              d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
          </svg>
          <span class="font-semibold text-sm">Invite Friends</span>
        </button>
        <div id="userProfile" class="hidden relative">
          <button id="userMenuButton"
            class="w-10 h-10 rounded-full bg-gray-200 hover:bg-gray-300 transition flex items-center justify-center cursor-pointer">
            <img id="userAvatar" class="w-10 h-10 rounded-full" src="" alt="User">
          </button>
          <div id="userMenu"
            class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-50">
            <button onclick="alert('Profile coming soon!')"
              class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              Profile
            </button>
            <button onclick="window.location.href='/logout'"
              class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              Logout
            </button>
          </div>
        </div>
        <a href="/login" id="loginButton"
          class="hidden items-center gap-2 px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition font-semibold text-sm">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z" />
          </svg>
          Login with Spotify
        </a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container">
    <div id="loginScreen" class="screen hidden">
      <h1>Spotify Authentication Required</h1>
      <div class="card">
        <p>To play full tracks, you need to log in with your Spotify account.</p>
        <p><strong>Note:</strong> Spotify Premium is recommended for best experience.</p>
        <a href="/login" class="btn btn-primary">Login with Spotify</a>
        <button id="skipLoginBtn" class="btn btn-secondary">Skip (Use Preview URLs)</button>
      </div>
    </div>

    <div id="createScreen" class="screen">
      <div class="card">
        <!-- Playlist selector (shown when authenticated) -->
        <div id="playlistSelector" class="hidden">
          <label>Select a Playlist:</label>
          <div id="playlistLoading" class="loading">Loading your playlists...</div>
          <div id="playlistGrid" class="playlist-grid"></div>
        </div>

        <!-- Manual input (shown when not authenticated or as fallback) -->
        <div id="manualInput">
          <label for="playlistId">Spotify Playlist ID or URL:</label>
          <input type="text" id="playlistId" placeholder="72Jj1IPNGZVqPvlqo53rMU">
          <small>Find the ID in the Spotify playlist URL</small>
        </div>

        <button id="createRoomBtn" class="btn btn-primary">Create Blindtest</button>
        <div id="loginOptions" class="login-options">
          <p>üí° <a href="/login" class="link-login">Login with Spotify</a> for full playback and access to your
            playlists</p>
        </div>
      </div>
    </div>

    <div id="waitingScreen" class="screen hidden">
      <div class="card">
        <div class="pin-display">
          <p>Blindtest PIN:</p>
          <h2 id="roomPin" class="pin">----</h2>
        </div>

        <div class="qr-code-container">
          <p>Scan to join:</p>
          <div id="qrcode"></div>
          <small>Players can scan this QR code to join automatically</small>
        </div>

        <p>Or share PIN manually: <strong id="roomPinText">----</strong></p>

        <div id="participantsList">
          <h3>Participants (<span id="participantCount">0</span>):</h3>
          <ul id="participants"></ul>
        </div>

        <div class="song-count-selector">
          <label for="songCountSlider">Number of songs: <span id="songCountValue">10</span></label>
          <input type="range" id="songCountSlider" min="5" max="30" value="10" step="1">
          <small>Select between 5 and 30 songs</small>
        </div>

        <div id="generatingProgress" class="progress-container hidden">
          <h3>Generating questions...</h3>
          <div class="progress-bar">
            <div id="progressBarFill" class="progress-bar-fill"></div>
          </div>
          <p id="progressText">Preparing track 0 of <span id="progressTotalSongs">10</span></p>
        </div>

        <button id="startGameBtn" class="btn btn-primary">Start Game</button>
      </div>
    </div>

    <!-- Intermediate Standings Modal -->
    <div id="standingsModal" class="modal hidden">
      <div class="modal-backdrop"></div>
      <div class="modal-content">
        <h1>Current Standings</h1>
        <div class="scoreboard">
          <h3>Leaderboard</h3>
          <div id="intermediateScoresList"></div>
        </div>
        <div class="countdown-dots">
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
        </div>
      </div>
    </div>

    <div id="gameScreen" class="screen hidden">
      <div class="game-header">
        <h2>Song <span id="songNumber">1</span> of <span id="totalSongs">10</span></h2>
        <div class="multiplier-display">
          <span class="multiplier-label">Score Multiplier:</span>
          <span class="multiplier-value" id="multiplierValue">1x</span>
        </div>
        <!-- <button id="nextSongBtn" class="btn btn-secondary">Next Song</button> -->
      </div>

      <div class="question-container">
        <h3>Who is the artist?</h3>
        <audio id="audioPlayer" controls></audio>
        <div id="spotifyPlayerUI" class="spotify-player-ui hidden">
          <div class="player-status">
            <span class="status-icon">üéµ</span>
            <span id="playerTrackInfo">Playing via Spotify...</span>
          </div>
        </div>

        <div class="answers-grid">
          <div class="answer-option red" data-color="red">
            <span class="option-label">A</span>
            <span class="artist-name" id="option0"></span>
          </div>
          <div class="answer-option blue" data-color="blue">
            <span class="option-label">B</span>
            <span class="artist-name" id="option1"></span>
          </div>
          <div class="answer-option yellow" data-color="yellow">
            <span class="option-label">C</span>
            <span class="artist-name" id="option2"></span>
          </div>
          <div class="answer-option green" data-color="green">
            <span class="option-label">D</span>
            <span class="artist-name" id="option3"></span>
          </div>
        </div>
      </div>
    </div>

    <div id="endScreen" class="screen hidden">
      <h1>üèÜ Game Over!</h1>
      <div class="card">
        <h2>Final Results</h2>
        <div id="finalScores"></div>
        <button id="newGameBtn" class="btn btn-primary">New Game</button>
      </div>
    </div>
  </div>

  <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js"></script>
  <script src="https://sdk.scdn.co/spotify-player.js"></script>
  <script src="{{ url_for('static', filename='js/host.js') }}"></script>

  <script>
    // Toggle user menu
    document.addEventListener('click', function (e) {
      const userMenuButton = document.getElementById('userMenuButton');
      const userMenu = document.getElementById('userMenu');

      if (userMenuButton && userMenuButton.contains(e.target)) {
        userMenu.classList.toggle('hidden');
      } else if (userMenu && !userMenu.contains(e.target)) {
        userMenu.classList.add('hidden');
      }
    });

    // Check auth and display user profile if logged in
    fetch('/check_auth')
      .then(res => res.json())
      .then(data => {
        if (data.authenticated) {
          document.getElementById('userProfile').classList.remove('hidden');
          document.getElementById('userProfile').classList.add('block');
          document.getElementById('loginButton').classList.add('hidden');

          // Fetch and display user info
          fetch('/me')
            .then(res => res.json())
            .then(userData => {
              const avatar = document.getElementById('userAvatar');
              const displayName = userData.display_name || userData.id || 'User';
              const initial = displayName.charAt(0).toUpperCase();

              // Use DiceBear avatar with initial - using purple/indigo theme
              avatar.src = `https://api.dicebear.com/7.x/initials/svg?seed=${encodeURIComponent(displayName)}&backgroundColor=667eea&fontSize=40`;
            })
            .catch(err => console.error('Failed to fetch user info:', err));
        } else {
          document.getElementById('loginButton').classList.remove('hidden');
          document.getElementById('loginButton').classList.add('flex');
        }
      })
      .catch(err => console.log('Not authenticated'));
  </script>
</body>

</html>